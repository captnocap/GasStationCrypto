{
  "name": "crypto-gas-station-nfp",
  "author": "Coder Pit Crew",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "devnet": "hardhat node --watch --fork-deployments polygon",
    "test": "TS_NODE_TRANSPILE_ONLY=1 hardhat test --deploy-fixture",
    "test:ganache": "TS_NODE_TRANSPILE_ONLY=1 hardhat test --deploy-fixture --network localhost",
    "coverage": "TS_NODE_TRANSPILE_ONLY=1 hardhat coverage",
    "compile": "hardhat compile && yarn flatten",
    "flatten": "hardhat flatten > ./artifacts/flatten.sol",
    "deploy:polygon": "hardhat deploy --network polygon",
    "postdeploy:polygon": "yarn flatten && hardhat export --network polygon --export ./artifacts/polygon.json --export-all ./artifacts/all-chains.json",
    "verify:polygon": "hardhat etherscan-verify --network polygon --solc-input",
    "deploy:bsc": "hardhat deploy --network bsc",
    "postdeploy:bsc": "yarn flatten && hardhat export --network bsc --export ./artifacts/bsc.json --export-all ./artifacts/all-chains.json",
    "verify:bsc": "hardhat etherscan-verify --network bsc --solc-input"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.2.1",
    "@eth-optimism/smock": "^1.1.10",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.2.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.4.8",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.3",
    "hardhat": "^2.6.1",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.9.0",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-morph": "^12.0.0",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@typechain/hardhat": "^2.3.0"
  }
}
